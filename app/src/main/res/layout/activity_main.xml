<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".MainActivity">

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/musicImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:padding="25dp"
        android:src="@drawable/ic_launcher_test_background"/>


    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/playlistButton"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/musicImage"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@id/lastButton"
        android:src="@drawable/ic_action_playlist" />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/lastButton"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/musicImage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@id/playButton"
        android:src="@drawable/ic_action_previous" />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/playButton"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/musicImage"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_play"
        app:neumorph_shapeType="flat" />

    <soup.neumorphism.NeumorphButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_action_play"
        app:neumorph_shapeType="flat" />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/nextButton"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/musicImage"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/playButton"
        android:src="@drawable/ic_action_next" />

    <soup.neumorphism.NeumorphImageButton
        android:id="@+id/favoriteButton"
        style="@style/Widget.Neumorph.ImageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/musicImage"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/nextButton"
        android:src="@drawable/ic_action_favorite"/>


    <soup.neumorphism.NeumorphTextView
        android:id="@+id/musicRemainingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playButton"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="0:00"/>

    <soup.neumorphism.NeumorphTextView
        android:id="@+id/musicTotalText"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playButton"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:hint="0:00"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/musicProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/musicRemainingText"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:indicatorColor="@color/black"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"/>


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btnStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/musicProgress"
        android:layout_centerHorizontal="false"
        android:padding="20dp"
        android:text="Storage" />

</RelativeLayout>