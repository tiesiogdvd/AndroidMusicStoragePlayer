<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true" >


    <alpha
        android:duration="200"
        android:fromAlpha="1.0"
        android:startOffset="100"
        android:toAlpha="0.0"/>
    <scale

        android:duration="200"
        android:startOffset="100"
        android:fromXScale="1"
        android:fromYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="0"
        android:toYScale="0" >
    </scale>

</set>
